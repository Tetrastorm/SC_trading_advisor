    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "reset ; make debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "unit_tests",
            "type": "shell",
            "command": "make tests_run ; make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}